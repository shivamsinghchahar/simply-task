<% flash.each do |key, value| %>
  <div data-controller="flash" class="w-max shadow-sm mx-auto mb-2.5 flex justify-between items-center text-center fixed bottom-0 right-0 left-0 <%= classes_for_flash(key) %> py-2.5 px-5 rounded-lg">
    <p class="mr-4"><%= value %></p>

    <button type="button" data-action="flash#dismiss" class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 <%= classes_for_flash_dismiss(key) %>">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>
