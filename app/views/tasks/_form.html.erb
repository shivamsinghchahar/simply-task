<%= form_with model: @task, class: "w-2/5 flex flex-col justify-center space-y-4" do |f| %>
  <% if @task.errors.present? %>
    <ul id="errors" class="w-full p-2 text-left list-disc list-inside border border-red-500 rounded bg-red-50">
      <% @task.errors.to_a.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="flex flex-col">
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 text-left" %>
    <%= f.text_area :name, required: false, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :due_date, class: "block text-sm font-medium text-gray-700 text-left" %>
    <%= f.date_field :due_date, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex">
    <%= f.check_box :is_completed, class: "appearance-none rounded-md border border-gray-300 p-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm mr-1" %>
    <%= f.label :mark_as_completed, class: "block text-sm font-medium text-gray-700 text-left" %>
  </div>

  <%= f.button class: "group flex w-full justify-center rounded-md border border-transparent bg-indigo-600 mt-2 py-2.5 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
    <span class="group-disabled:hidden"><%= "#{['new', 'create'].include?(controller.action_name) ? 'Add task' : 'Update task' }" %></span>
    <span class="hidden group-disabled:block group-disabled:cursor-wait"><%= "#{['new', 'create'].include?(controller.action_name) ? 'Adding task...' : 'Updating task...' }" %></span>
  <% end %>
<% end %>
